html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title File List
        // link(rel="stylesheet", href="")
    body
        main
            h2 Files
            .files
                form(action="/download" method="POST")
                    h2 Magnet URI
                    input(name='magnetURI' value=magnetURI)
                    h2 Files
                    each file, index in files
                        input(type='checkbox' name=file id=index)
                        label(for=index) #{file}
                        br
                    h2 Subtitle
                    input(name='subtitle')
                    br
                    button(type="submit") Download selected files
                
